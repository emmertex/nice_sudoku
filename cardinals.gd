static func box_to_rc(box: int, index: int) -> Vector2i:
	var box_row = box / 3
	var box_col = box % 3
	var cell_row = index / 3
	var cell_col = index % 3
	return Vector2i(
		box_row * 3 + cell_row,
		box_col * 3 + cell_col
	)